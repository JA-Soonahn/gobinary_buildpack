#!/bin/bash

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3


# Determine if we even need to build
if test -f "$CACHE_DIR/go_insight/cache"; then
    CACHE_HASH=`cat $CACHE_DIR/go_insight/cache`
    echo $CACHE_HASH
else
    mkdir -p $CACHE_DIR/go_insight
    echo 'foobar' >> $CACHE_DIR/go_insight/cache
fi


